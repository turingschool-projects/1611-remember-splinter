<div  class="reminder-item">
  <h3 class="reminder-title">{{model.title}}</h3>
  <p class="reminder-body">{{model.body}}</p>
  <h5>Due Date:</h5>
  <p class="reminder-date">{{model.date}}</p>
  {{#link-to 'reminders.reminder.edit'}}
    <button class='edit'>
      Edit
    </button>
  {{/link-to}}

  <button {{action 'removeReminder' model}} class='delete'>
    Delete
  </button>

</div>
